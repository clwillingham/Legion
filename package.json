{
  "name": "legion",
  "private": true,
  "description": "A persistent multi-agent collective with peer-to-peer communication",
  "workspaces": [
    "packages/core",
    "packages/cli"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint packages/*/src/**/*.ts",
    "lint:fix": "eslint packages/*/src/**/*.ts --fix",
    "format": "prettier --write packages/*/src/**/*.ts",
    "format:check": "prettier --check packages/*/src/**/*.ts",
    "clean": "npm run clean --workspaces"
  },
  "keywords": [
    "ai",
    "agents",
    "multi-agent",
    "llm",
    "collective",
    "orchestration"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0"
  },
  "devDependencies": {
    "vitest": "^4.0.18"
  }
}
